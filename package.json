{
  "name": "@alxshelepenok/diesel",
  "version": "1.0.200",
  "description": "A state management library for React",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxshelepenok/diesel.git"
  },
  "license": "MIT",
  "author": "Alexander Shelepenok <alxshelepenok@gmail.com>",
  "main": "target/diesel.umd.js",
  "module": "target/diesel.es5.js",
  "typings": "target/types/diesel.d.ts",
  "files": [
    "target"
  ],
  "scripts": {
    "build": "npm run clean && tsc --module commonjs && rollup -c internal/rollup/config.ts",
    "clean": "rimraf target",
    "format": "npm run format:ts",
    "format:ts": "eslint . --ext .tsx,.ts --fix && prettier --write .",
    "lint": "npm run lint:ts",
    "lint:ts": "eslint . --ext .tsx,.ts && npx prettier --check .",
    "semantic-release": "semantic-release",
    "start": "rollup -c internal/rollup/config.ts -w",
    "test": "jest --runInBand --config internal/jest/config.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run build"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{tsx?,ts?}": [
      "npm run format:ts"
    ]
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "rollup": "^2.70.2"
  },
  "devDependencies": {
    "@alxshelepenok/eslint-config": "1.0.33",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@jest/types": "27.5.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.29",
    "@types/react": "18.0.7",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "eslint": "8.14.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.4.0",
    "prettier": "2.6.2",
    "prettier-plugin-packagejson": "2.2.17",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "peerDependencies": {
    "react": "^16.11.0 || ^17.0.0"
  }
}
