{
  "name": "@alxshelepenok/diesel",
  "version": "0.1.0",
  "description": "A state management library for React",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxshelepenok/diesel.git"
  },
  "license": "MIT",
  "author": "Alexander Shelepenok <alxshelepenok@gmail.com>",
  "main": "target/diesel.umd.js",
  "module": "target/diesel.es5.js",
  "typings": "target/types/diesel.d.ts",
  "files": [
    "target"
  ],
  "scripts": {
    "clean": "rimraf target",
    "lint": "npm run lint:ts",
    "format": "npm run format:ts",
    "start": "rollup -c internal/rollup/config.ts -w",
    "test": "jest --runInBand --config internal/jest/config.ts",
    "lint:ts": "eslint . --ext .tsx,.ts && npx prettier --check .",
    "format:ts": "eslint . --ext .tsx,.ts --fix && prettier --write .",
    "build": "npm run clean && tsc --module commonjs && rollup -c internal/rollup/config.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.{tsx?,ts?}": [
      "npm run format:ts"
    ]
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "react": "^17.0.2",
    "rollup": "^2.47.0"
  },
  "devDependencies": {
    "@alxshelepenok/eslint-config": "^0.4.7",
    "@jest/types": "^26.6.2",
    "@types/jest": "^26.0.23",
    "@types/node": "14.17.3",
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "husky": "^1.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^9.0.0",
    "prettier": "2.3.1",
    "prettier-plugin-packagejson": "^2.2.10",
    "rimraf": "^2.6.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
