{
  "name": "@alxshelepenok/diesel",
  "version": "1.0.89",
  "description": "A state management library for React",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxshelepenok/diesel.git"
  },
  "license": "MIT",
  "author": "Alexander Shelepenok <alxshelepenok@gmail.com>",
  "main": "target/diesel.umd.js",
  "module": "target/diesel.es5.js",
  "typings": "target/types/diesel.d.ts",
  "files": [
    "target"
  ],
  "scripts": {
    "clean": "rimraf target",
    "lint": "npm run lint:ts",
    "format": "npm run format:ts",
    "start": "rollup -c internal/rollup/config.ts -w",
    "test": "jest --runInBand --config internal/jest/config.ts",
    "lint:ts": "eslint . --ext .tsx,.ts && npx prettier --check .",
    "format:ts": "eslint . --ext .tsx,.ts --fix && prettier --write .",
    "build": "npm run clean && tsc --module commonjs && rollup -c internal/rollup/config.ts",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run build"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{tsx?,ts?}": [
      "npm run format:ts"
    ]
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "rollup": "^2.47.0"
  },
  "devDependencies": {
    "@alxshelepenok/eslint-config": "0.4.7",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@jest/types": "27.1.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.1",
    "@types/jest": "27.0.1",
    "@types/node": "14.17.15",
    "@types/react": "17.0.20",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "conventional-changelog-conventionalcommits": "4.6.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.2",
    "jest": "27.1.1",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "prettier-plugin-packagejson": "2.2.11",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.7",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.2"
  },
  "peerDependencies": {
    "react": "^16.11.0 || ^17.0.0"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
